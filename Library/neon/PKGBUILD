# Contributor: Juergen Hoetzel <juergen@archlinux.org>

pkgname=neon
pkgver=0.30.1
pkgrel=1
pkgdesc="HTTP and WebDAV client library with a C interface"
arch=('i686' 'x86_64')
url="http://www.webdav.org/neon/"
license=('GPL' 'LGPL')
depends=('krb5' 'expat' 'ca-certificates')
options=('libtool') # FS#16067
source=(http://www.webdav.org/${pkgname}/${pkgname}-${pkgver}.tar.gz)
sha1sums=('efec2a6f17d9bd2323345320e3067349ddc9cf79'
          )
validpgpkeys=('6D0C74985535060B23300BFE47F6969D0E44CF0C') # Joe Orton

options=('staticlibs')

build() {
  cd "${srcdir}"/${pkgname}-${pkgver}

  export CFLAGS="-fPIC"
  export CPPFLAGS="-fPIC"
  export CXXFLAGS="-fPIC"

  ./configure --prefix=/usr \
    --with-expat \
    --disable-shared --enable-static \
    --with-ssl=openssl \
    --with-ca-bundle=/etc/ssl/certs/ca-certificates.crt
  make
}

package() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
}
